    <system:String x:Key="GroupBluetoothStatus">Estado de Bluetooth</system:String>    <!-- Etiqueta para la conectividad Bluetooth -->
    <system:String x:Key="GroupSelectSensors">Seleccionar Sensores</system:String>    <!-- Encabezado para las casillas de selección de sensores -->
    <!-- Nombres de Dispositivos Kinect -->
    <system:String x:Key="KinectAzure">Azure Kinect</system:String>    <!-- Nombre para mostrar opción de Azure Kinect -->
    <system:String x:Key="KinectXbox">Kinect Xbox One</system:String>    <!-- Nombre para mostrar opción de Kinect Xbox -->

    <!-- Opciones de Sensores -->
    <system:String x:Key="SensorAccelerometer">Acelerómetro</system:String>    <!-- Etiqueta para la casilla de Acelerómetro -->
    <system:String x:Key="SensorHeartRate">Frecuencia Cardíaca</system:String>    <!-- Etiqueta para la casilla de Frecuencia Cardíaca -->
    <!-- Misceláneo -->
    <system:String x:Key="LabelStatus">Estado:</system:String>    <!-- Etiqueta general usada para prefijar la información de estado -->

    <!-- ========================= CONTROLES DEL SENSOR DE FRECUENCIA CARDÍACA =============================== -->
    <!-- Títulos de sección -->
    <system:String x:Key="GroupHeartRateSensorControls">Controles del sensor de frecuencia cardíaca</system:String>    <!-- Encabezado para controles del sensor de frecuencia cardíaca -->
    <system:String x:Key="LabelSelectHeartRateSensor">Seleccione el sensor de frecuencia cardíaca:</system:String>    <!-- Etiqueta para el desplegable del sensor de frecuencia cardíaca -->
    <!-- Opciones del sensor de frecuencia cardíaca -->
    <system:String x:Key="SensorPolarH10">Polar H10</system:String>    <!-- Opción del sensor Polar H10 -->
    <system:String x:Key="SensorXiaomiBand">Xiaomi Band</system:String>    <!-- Opción del sensor Xiaomi Band -->
    <system:String x:Key="SensorBangleWatch">Bangle Watch</system:String>    <!-- Opción del sensor Bangle Watch -->
    
    <!-- ====================== ACCELEROMETER SENSOR CONTROLS =============================== -->
    <!-- Títulos de sección -->
    <system:String x:Key="GroupAccelerometerSensorControls">Controles del Sensor Acelerómetro</system:String>    <!-- Encabezado para controles del acelerómetro -->
    <system:String x:Key="LabelSelectAccelerometerSensor">Seleccione sensor acelerómetro:</system:String>    <!-- Etiqueta para el desplegable del acelerómetro -->
    <!-- Opciones de sensor acelerómetro -->
    <system:String x:Key="SensorBangle">Bangle Watch</system:String>    <!-- Opción sensor Bangle -->
    <system:String x:Key="SensorXiaomi">Xiaomi Band</system:String>    <!-- Opción sensor Xiaomi -->

    <!-- ======================= ESCÁNER DE DISPOSITIVOS BLUETOOTH ======================== -->
    <!-- Títulos de sección -->
    <system:String x:Key="GroupBluetoothScanner">Escáner de Dispositivos Bluetooth</system:String>    <!-- Encabezado para el grupo del escáner Bluetooth -->
    <system:String x:Key="TitleBluetoothScanner">Escáner de Dispositivos Bluetooth</system:String>    <!-- Título de la ventana -->
    <!-- Botones -->
    <system:String x:Key="BtnScanDevices">Buscar dispositivos</system:String>    <!-- Texto del botón de escanear -->
    <system:String x:Key="BtnPair">Emparejar</system:String>    <!-- Texto del botón de emparejar -->
    <!-- Etiquetas -->
    <system:String x:Key="LabelAvailableDevices">Dispositivos disponibles</system:String>    <!-- Etiqueta sobre la lista de dispositivos -->
    <!-- Mensajes de estado -->
    <system:String x:Key="ScanStatusScanning">Buscando dispositivos cercanos...</system:String>    <!-- Mensaje de estado al escanear -->

</ResourceDictionary>