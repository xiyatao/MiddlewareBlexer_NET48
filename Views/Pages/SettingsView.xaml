<UserControl x:Class="Kinect_Middleware.Views.Pages.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kinect_Middleware.Views.Pages"
             xmlns:components="clr-namespace:Kinect_Middleware.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <!-- App -->
            <TextBlock HorizontalAlignment="Left"
                       Text="{DynamicResource LabelApp}"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10"
                       Width="100"/>

            <TextBlock HorizontalAlignment="Left"
                       Text="{DynamicResource LabelAppComment}"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Margin="10 0"
                       Width="275"
                       FontSize="10"
                       TextWrapping="Wrap"/>

            <components:Selector x:Name="LanguageSelector"
                                 Text="{DynamicResource LabelLanguage}" 
                                 SelectorChanged="Selector_SelectionChanged"/>

            <!-- Azure Kinect -->
            <TextBlock HorizontalAlignment="Left"
                       Text="Azure Kinect"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10"
                       Width="100"/>

            <TextBlock HorizontalAlignment="Left"
                       Text="{DynamicResource LabelAzureKinectComment}"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Margin="10 0"
                       Width="275"
                       FontSize="10"
                       TextWrapping="Wrap"/>

            <components:Selector x:Name="SensorOrientationSelector"
                                 Text="{DynamicResource LabelSensorOrientation}" 
                                 SelectorChanged="Selector_SelectionChanged"/>
            
            <components:Selector x:Name="ProcessingModeSelector" 
                                 Text="{DynamicResource LabelProcessingMode}" 
                                 SelectorChanged="Selector_SelectionChanged"/>
            
            <components:Selector x:Name="ColorResolutionSelector" 
                                 Text="{DynamicResource LabelColorResolution}" 
                                 SelectorChanged="Selector_SelectionChanged"/>
            
            <components:Selector x:Name="FPSSelector" 
                                 Text="{DynamicResource LabelFPS}" 
                                 SelectorChanged="Selector_SelectionChanged"/>

            <!-- Kinect One -->
            <TextBlock HorizontalAlignment="Left"
                       Text="Kinect One"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10"
                       Width="100"/>

            <TextBlock HorizontalAlignment="Left"
                       Text="{DynamicResource LabelKinectOneComment}"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Margin="10 0"
                       Width="275"
                       FontSize="10"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
